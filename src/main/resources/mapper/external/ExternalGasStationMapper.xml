<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.example.cms.external.api.mapper.ExternalGasStationMapper">

    <!-- Result Map -->
    <resultMap id="gasStationResultMap" type="com.example.cms.external.api.model.ExternalGasStation">
        <id property="id" column="id"/>
        <result property="opinetId" column="opinet_id"/>
        <result property="stationName" column="station_name"/>
        <result property="brand" column="brand"/>
        <result property="address" column="address"/>
        <result property="latitude" column="latitude"/>
        <result property="longitude" column="longitude"/>
        <result property="phone" column="phone"/>
        <result property="apiRawData" column="api_raw_data"/>
        <result property="createdAt" column="created_at"/>
        <result property="updatedAt" column="updated_at"/>
    </resultMap>

    <!-- Upsert -->
    <insert id="upsert" parameterType="com.example.cms.external.api.model.ExternalGasStation">
        INSERT INTO gas_stations (
            opinet_id, station_name, brand, address, latitude, longitude, phone, api_raw_data
        ) VALUES (
            #{opinetId}, #{stationName}, #{brand}, #{address}, #{latitude}, #{longitude}, #{phone}, #{apiRawData}
        )
        ON DUPLICATE KEY UPDATE
            station_name = VALUES(station_name),
            brand = VALUES(brand),
            address = VALUES(address),
            latitude = VALUES(latitude),
            longitude = VALUES(longitude),
            phone = VALUES(phone),
            api_raw_data = VALUES(api_raw_data),
            updated_at = NOW()
    </insert>

    <!-- Select by opinet_id -->
    <select id="findByOpinetId" parameterType="string" resultMap="gasStationResultMap">
        SELECT * FROM gas_stations WHERE opinet_id = #{opinetId}
    </select>

    <!-- Select all -->
    <select id="findAll" resultMap="gasStationResultMap">
        SELECT * FROM gas_stations ORDER BY station_name
    </select>

    <!-- Check exists -->
    <select id="existsByOpinetId" parameterType="string" resultType="boolean">
        SELECT COUNT(*) > 0 FROM gas_stations WHERE opinet_id = #{opinetId}
    </select>

</mapper>
